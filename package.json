{
  "name": "@iron-linux/core",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "terminal": "docker exec -it app /bin/sh",
    "deploy": "yarn export && touch ./out/.nojekyll && gh-pages -d out",
    "clean-install": "rm -rf node_modules && yarn install --frozen-lockfile --silent",
    "db:pull": "prisma db pull",
    "db:push": "prisma db push",
    "docker:start": "docker-compose up -d --build",
    "docker:build": "docker-compose build",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker system prune -af",
    "docker:clean-volumes": "docker system prune -f",
    "docker:terminal": "docker exec -it /bin/sh",
    "docker:scan": "docker scan",
    "docker:install": "docker-compose exec app yarn install"
  },
  "dependencies": {
    "@emotion/babel-plugin": "^11.3.0",
    "@hapi/iron": "^6.0.0",
    "@headlessui/react": "^1.3.0",
    "@heroicons/react": "^1.0.1",
    "@popperjs/core": "^2.10.2",
    "@prisma/client": "^3.0.2",
    "@types/cookie": "^0.4.1",
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/tailwindcss": "^2.2.1",
    "babel-jest": "^27.2.0",
    "chart.js": "^3.6.0",
    "cookie": "^0.4.1",
    "framer-motion": "^5.0.0",
    "next": "^11.1.3-canary.30",
    "next-connect": "^0.10.2",
    "next-mdx-remote": "^3.0.4",
    "nprogress": "^0.2.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "react": "17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.17.1",
    "react-icons": "^4.3.1",
    "react-select": "^4.3.1",
    "react-spinners": "^0.11.0",
    "reading-time": "^1.4.0",
    "swr": "^1.0.0",
    "tailwindcss": "^2.2.15",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.5",
    "@types/nprogress": "^0.2.0",
    "@types/react": "17.0.11",
    "@types/react-beautiful-dnd": "^13.1.2",
    "@types/react-select": "^4.0.17",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "autoprefixer": "^10.0.2",
    "commitizen": "^4.2.4",
    "eslint": "7.29.0",
    "eslint-config-next": "11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "26.4.2",
    "lint-staged": "^11.1.2",
    "postcss": "^8.0.9",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^8.0.1",
    "prettier": "^2.3.1",
    "prisma": "^3.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "packages/frontend/**/*.{js,jsx,ts,tsx}": [
      "yarn lint src",
      "yarn build",
      "yarn export"
    ]
  }
}
